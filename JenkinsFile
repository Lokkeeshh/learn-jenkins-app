        stage('Test') {
            agent {
                docker  {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh ''' 
                echo "Test stage" 
                if test -f build/index.html; then
                        echo "index.html exists.";
                    else
                        echo "index.html does not exist!" >&2;
                        exit 1;
                    fi

                echo "Running unit tests..."
                npm test

                '''
            }
             
        }
    }

    post {
        always {
            junit 'test-results/junit.xml'
        }
    }
}
